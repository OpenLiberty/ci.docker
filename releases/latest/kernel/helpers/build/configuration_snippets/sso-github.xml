<server>    
    <featureManager>       
        <feature>appSecurity-3.0</feature>
        <feature>socialLogin-1.0</feature>
    </featureManager> 

   <!-- defaults from the server metatype.xml are declared as variables here
         If nothing is passed in elsewhere, the defaults will prevail.
         Required parameters have no defaults, so are not defined here.
         The required parameters are 
           clientId, clientSecret, redirectToRPHostandPort
    -->
    <variable name="githubLogin.mapToUserRegistry" defaultValue="false"/>   
    <variable name="githubLogin.hostname" defaultValue="github.com" />
 
    <githubLogin
        clientId="${githubLogin.clientId}"
        clientSecret="${githubLogin.clientSecret}"
        redirectToRPHostAndPort="${githubLogin.redirectToRPHostAndPort}"
        mapToUserRegistry="${githubLogin.mapToUserRegistry}"    
        tokenEndpoint="https://${githubLogin.hostname}/login/oauth/access_token"
        authorizationEndpoint="https://${githubLogin.hostname}/login/oauth/authorize"
        userApi="https://api.${githubLogin.hostname}/user/emails"   
    ></githubLogin>
</server>